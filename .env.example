# --- Postgres / TimescaleDB (ojo: host = db, es el nombre del servicio en compose) ---
DB_HOST=db
DB_PORT=5432
DB_NAME=agrovision
DB_USER=agrovision
DB_PASSWORD=strong_password_here

# --- MQTT ---
MQTT_BROKER_HOST=mqtt
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
# Estructura de topics: agrovision/sensors/<deviceId>/telemetry
MQTT_TOPIC=agrovision/sensors/+/telemetry

# --- App ---
APP_ENV=local
APP_DEBUG=true
SECRET_KEY=change_me
HUMIDITY_THRESHOLD=30

# --- pgAdmin (acceso web) ---
PGADMIN_DEFAULT_EMAIL=admin@agrovision.local
PGADMIN_DEFAULT_PASSWORD=supersecret
